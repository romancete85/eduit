pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker')
        DOCKERHUB_REPO = 'romanfandrich/tu-repositorio'
    }
    stages {
        stage('Checkout') {
            steps {
                // Clonar el repositorio
                git url: 'https://github.com/tuusuario/tu-repositorio.git', branch: 'main'
            }
        }
        stage('Linting') {
            steps {
                script {
                    // Ejecutar Hadolint para verificar el Dockerfile
                    bat 'docker run --rm -i hadolint/hadolint < Dockerfile'
                }
            }
        }
        stage('Build Image') {
            steps {
                script {
                    // Construir la imagen Docker
                    bat 'docker build -t %DOCKERHUB_REPO%:%BUILD_NUMBER% .'
                }
            }
        }
        stage('Run Container') {
            steps {
                script {
                    // Detener y eliminar cualquier contenedor en ejecución con el mismo nombre
                    bat 'docker stop my-container || true && docker rm my-container || true'
                    // Ejecutar el contenedor
                    bat 'docker run -d --name my-container %DOCKERHUB_REPO%:%BUILD_NUMBER%'
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    // Ejecutar pruebas básicas
                    bat 'docker exec my-container cmd /c "echo Pruebas ejecutadas exitosamente"'
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    // Iniciar sesión en DockerHub y subir la imagen
                    bat "echo %DOCKERHUB_CREDENTIALS_PSW% | docker login -u %DOCKERHUB_CREDENTIALS_USR% --password-stdin"
                    bat "docker push %DOCKERHUB_REPO%:%BUILD_NUMBER%"
                }
            }
        }
    }
    post {
        always {
            script {
                // Limpiar contenedor después de la ejecución
                bat 'docker stop my-container || true && docker rm my-container || true'
            }
        }
    }
}
